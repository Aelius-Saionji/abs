pkgname=dmenu-personalized
_pkgname=dmenu
pkgver=4.6.3.g3de85ca
pkgver(){
  cd $_pkgname
  git describe --tags |sed 's/-/./g'
}
pkgrel=1
pkgdesc="A generic menu for X"
url="http://tools.suckless.org/dmenu/"
arch=('i686' 'x86_64')
license=('MIT')
depends=('sh' 'libxinerama')
makedepends=('git')
provides=('dmenu')
conflicts=('dmenu')
source=("$_pkgname::git+http://git.suckless.org/dmenu"
	class.patch
	shift-insert.patch
	better-shift-insert.patch)
md5sums=('SKIP'
	 'dfa9eecdf73879fcfd8b04ff336bcb30'
	 'ae45c6bf23d69f138a6618c7389ef72c'
	 'dffce7fafd759df1185d98c7f79b2bd4')

prepare() {
  cd $_pkgname
#  patch -i $srcdir/class.patch
#  patch -i $srcdir/better-shift-insert.patch
}

build() {
  cd $_pkgname
  make X11INC=/usr/include/X11 X11LIB=/usr/lib/X11 FREETYPEINC=/usr/include/freetype2
}

package() {
  cd $_pkgname
  make PREFIX=/usr DESTDIR="$pkgdir" install
  install -Dm644 LICENSE "$pkgdir"/usr/share/licenses/$pkgname/LICENSE
}
